{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react-jsx"
  },
  "include": [
    "**/*.ts",
    "motia.config.ts",
    "**/*.tsx",
    "types.d.ts",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}